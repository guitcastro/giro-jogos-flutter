# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Otimizações específicas para CI
if ENV['CI']
  ENV['COCOAPODS_DISABLE_DETERMINISTIC_UUIDS'] = 'true'
  ENV['CP_DISABLE_ON_DOWNLOAD_HOOKS'] = 'true'
  install! 'cocoapods', :deterministic_uuids => false
end

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Força iOS deployment target para 15.0+ (compatível com Firebase atual)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      
      # Otimizações específicas para CI
      if ENV['CI']
        # Reduz tempo de debug symbols no CI
        config.build_settings['DEBUG_INFORMATION_FORMAT'] = 'dwarf'
        config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
        
        # Desabilita warnings no CI para acelerar
        config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES'
        config.build_settings['SWIFT_SUPPRESS_WARNINGS'] = 'YES'
        
        # Otimizações de linking
        config.build_settings['OTHER_LDFLAGS'] = '$(inherited) -Wl,-no_compact_unwind'
        
        # Desabilita Bitcode no CI
        config.build_settings['ENABLE_BITCODE'] = 'NO'
        
        # Reduzir warnings de script phases no CI
        config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'
      end
    end
  end
  
  # Configuração específica para reduzir warnings de script phases
  if ENV['CI']
    installer.pods_project.targets.each do |target|
      target.build_phases.grep(Xcodeproj::Project::Object::PBXShellScriptBuildPhase).each do |script_phase|
        if script_phase.name&.include?("Create Symlinks") || script_phase.shell_script&.include?("symlink")
          # Configurar script phase para não mostrar warnings sobre dependency analysis
          script_phase.always_out_of_date = false
        end
      end
    end
  end
end
